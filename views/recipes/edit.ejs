<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= recipe.name %></h1>
        
            <div style="width: 50%; margin: 30px auto;">
                <form action="/recipes/<%= recipe._id %>?_method=PUT", method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" value="<%= recipe.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" value="<%= recipe.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="ingredients" value="<%= recipe.ingredients %>">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control summernote" name="directions"><%= recipe.directions %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">Submit</button>
                    </div>
                </form>
                <a href="/recipes">Go back</a>
            </div>
    </div>
</div>

<% include ../partials/footer %>